# ===== Database Configuration Variables =====
# Modify these values according to your company and environment
# This file is used by the setup scripts

# Company/Database Information
COMPANY_NAME="Benites"
DATABASE_NAME="benites_marketplace"
DATABASE_DESCRIPTION="Marketplace Inmobiliario Benites"

# Database Users
ADMIN_USER="benites_admin"
ADMIN_PASSWORD="BeniteS2025!Admin"
APP_USER="benites_app"
APP_PASSWORD="BeniteS2025!App"

# Database Settings
DB_HOST="localhost"
DB_PORT="5432"
DB_LOCALE_COLLATE="es-ES"
DB_LOCALE_CTYPE="es-ES"
DB_ENCODING="UTF8"
DB_TEMPLATE="template0"

# Connection Strings (auto-generated)
ADMIN_CONNECTION_STRING="postgresql://${ADMIN_USER}:${ADMIN_PASSWORD}@${DB_HOST}:${DB_PORT}/${DATABASE_NAME}"
APP_CONNECTION_STRING="postgresql://${APP_USER}:${APP_PASSWORD}@${DB_HOST}:${DB_PORT}/${DATABASE_NAME}"

# Performance Settings
MAX_CONNECTIONS="100"
SHARED_BUFFERS="256MB"
EFFECTIVE_CACHE_SIZE="1GB"
WORK_MEM="4MB"
MAINTENANCE_WORK_MEM="64MB"

# Application Settings
DEFAULT_PLAN_CODE="free"
DEFAULT_CURRENCY="PEN"
DEFAULT_COUNTRY="PE"
TIMEZONE="America/Lima"

# Security Settings
ENABLE_ROW_LEVEL_SECURITY="true"
ENABLE_AUDIT_LOG="true"
PASSWORD_MIN_LENGTH="8"
SESSION_TIMEOUT_MINUTES="60"

# File Upload Limits (per plan)
FREE_MAX_IMAGES="3"
FREE_MAX_VIDEOS="0"
FREE_MAX_IMAGE_SIZE_MB="2"
FREE_MAX_VIDEO_SIZE_MB="0"

BASIC_MAX_IMAGES="8"
BASIC_MAX_VIDEOS="1"
BASIC_MAX_IMAGE_SIZE_MB="5"
BASIC_MAX_VIDEO_SIZE_MB="50"

PREMIUM_MAX_IMAGES="15"
PREMIUM_MAX_VIDEOS="3"
PREMIUM_MAX_IMAGE_SIZE_MB="10"
PREMIUM_MAX_VIDEO_SIZE_MB="200"

# Backup Settings
BACKUP_RETENTION_DAYS="30"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_COMPRESSION="true"

# Monitoring
LOG_MIN_DURATION_STATEMENT_MS="1000"
LOG_STATEMENT="ddl"  # none, ddl, mod, all
ENABLE_SLOW_QUERY_LOG="true"

# Development vs Production
ENVIRONMENT="development"  # development, staging, production
DEBUG_MODE="true"
VERBOSE_LOGGING="true"
