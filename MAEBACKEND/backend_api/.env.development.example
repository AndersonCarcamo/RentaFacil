# ==============================
# EasyRent Backend - Development
# ==============================

# Application
APP_NAME=RentaFacil API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_DOCS_ENABLED=true
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# Security
SECRET_KEY=replace_with_dev_secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALLOWED_HOSTS=localhost,127.0.0.1
ENFORCE_HTTPS_REDIRECT=false

# CORS (frontend local)
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database
DB_HOST=localhost
DATABASE_URL=postgresql://postgres:password@localhost:5432/easy_rent
DATABASE_URL_TEST=postgresql://postgres:password@localhost:5432/easy_rent_test

# Redis
REDIS_URL=redis://localhost:6379/1

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-serviceAccount.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@easyrent.pe
EMAIL_FROM_NAME=EasyRent

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIRECTORY=uploads

# Culqi (DEV)
CULQI_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxx
CULQI_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxx
CULQI_API_URL=https://api.culqi.com/v2