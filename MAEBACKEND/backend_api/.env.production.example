# ==============================
# EasyRent Backend - Production
# ==============================

# Application
APP_NAME=EasyRent API
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
API_DOCS_ENABLED=false
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443
WEB_CONCURRENCY=6

# DB pool tuning (per-worker profile)
DB_POOL_PROFILE=throughput
DB_POOL_PER_WORKER=8
DB_POSTGRES_CONNECTION_BUDGET=120
DB_RESERVED_CONNECTIONS=20

# Security
SECRET_KEY=replace_with_long_random_secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALLOWED_HOSTS=localhost,127.0.0.1,100.119.186.126,api.tudominio.com,tudominio.com
ENFORCE_HTTPS_REDIRECT=true

# CORS (solo frontend productivo)
FRONTEND_URL=https://app.tudominio.com
CORS_ALLOWED_ORIGINS=https://app.tudominio.com

# Database
DB_HOST=host.docker.internal
DATABASE_URL=postgresql://usuario_de_app:clave_prueba@host.docker.internal:5432/renta_facil_db
DATABASE_URL_TEST=postgresql://usuario_de_app:clave_prueba@host.docker.internal:5432/renta_facil_db

# Redis
REDIS_URL=redis://redis:6379/1

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-serviceAccount.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Email
EMAIL_ENABLED=True
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@tudominio.com
EMAIL_FROM_NAME=EasyRent

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIRECTORY=uploads

# Culqi (PROD)
CULQI_PUBLIC_KEY=pk_live_xxxxxxxxxxxxxxxxx
CULQI_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxx
CULQI_API_URL=https://api.culqi.com/v2