# Application
APP_NAME=EasyRent API
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# Security
SECRET_KEY=renta_facil_prod_0509$_$
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALLOWED_HOSTS=localhost,127.0.0.1,100.119.186.126,api.tudominio.com,tudominio.com
