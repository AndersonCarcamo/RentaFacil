# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/easy_rent
DATABASE_URL_TEST=postgresql://postgres:password@localhost:5432/easy_rent_test

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
APP_NAME=EasyRent API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Email Configuration (for password reset)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@easyrent.pe
EMAIL_FROM_NAME=EasyRent

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=12
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIRECTORY=uploads
