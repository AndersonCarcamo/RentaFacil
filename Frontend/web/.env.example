# Variables de entorno para desarrollo local
# Copiar a .env.local y configurar valores reales

# URL base de la API del backend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# URL base del sitio
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Configuración de Firebase (para autenticación)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123def456

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Meta Pixel (Facebook)
NEXT_PUBLIC_FB_PIXEL_ID=123456789012345

# Google Maps API Key (para mapas y ubicaciones)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Configuración de email (para contacto)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# JWT Secret para sesiones (si se maneja desde frontend)
JWT_SECRET=your_jwt_secret_key_here

# Configuración de Redis (si se usa cache del lado cliente)
REDIS_URL=redis://localhost:6379

# Configuración para uploads de imágenes
NEXT_PUBLIC_MAX_FILE_SIZE=5242880  # 5MB in bytes
NEXT_PUBLIC_ACCEPTED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Configuración de SEO
NEXT_PUBLIC_SITE_NAME=RentaFacil
NEXT_PUBLIC_SITE_DESCRIPTION="Encuentra el alquiler perfecto en Perú"

# Configuración de desarrollo
NODE_ENV=development
ANALYZE=false

# Configuración de logging
LOG_LEVEL=info

# Feature flags
FEATURE_CHAT_ENABLED=true
FEATURE_VIRTUAL_TOURS_ENABLED=false
FEATURE_PAYMENT_INTEGRATION=false

# URLs de redes sociales
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/rentafacil
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/rentafacil
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/rentafacil
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/rentafacil

# Configuración de WhatsApp Business
NEXT_PUBLIC_WHATSAPP_NUMBER=51987654321
NEXT_PUBLIC_WHATSAPP_MESSAGE="Hola, me interesa una propiedad en RentaFacil"

# Configuración de PWA
NEXT_PUBLIC_PWA_ENABLED=true

# Configuración de CDN para imágenes
NEXT_PUBLIC_CDN_URL=https://cdn.rentafacil.com